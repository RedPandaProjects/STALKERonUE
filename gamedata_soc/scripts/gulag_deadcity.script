        ltx = ltx.."[logic@" .. gname .. "_kamp" .. i .. "]\n" ..
                   "active          = kamp@" .. gname .. "_kamp" .. i .. "\n" ..
                   "combat_ignore   = combat_ignore\n" ..

                   "[kamp@" .. gname .. "_kamp" .. i .. "]\n" ..
                   "center_point        = kamp" .. i .. "\n" ..
                   "def_state_moving    = run\n" ..
