                       "def_state_moving    = patrol\n" ..
                       "on_timer            = " .. d[j] .. "000 | walker@" .. gname .. "_free" .. i .. "_to_kamp" .. v .. "\n" ..
                       "soundgroup          = " .. gname .. "_kamp" .. j .. "_sg\n" ..
                       --"danger              = danger_bandits\n" ..
