    -- base guards
    pred = {b_predicate_vb, b_predicate_v}
    for i, v in pairs({13, 14}) do
	    t = { section = "logic@" .. gname .. "_base_guard" .. i,
		    idle = 0,
		    prior = v, state = {0},
		    squad = squad, group = groups[7],
		    in_rest = "cit_selmag_restr", out_rest = "",
		    predicate = pred[i]
