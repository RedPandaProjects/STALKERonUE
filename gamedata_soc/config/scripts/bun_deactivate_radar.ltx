snd = affects\psy_blackout
stereo = true
on_timer  = 10500| {-bun_actor_fall} %=disable_ui +bun_actor_fall =run_postprocess(agr_u_fade)%
on_signal = sound_end | sr_idle@sleep %=start_radar_dream +sar_monolith_call +bun_antenna_off%

[sr_idle@sleep]
on_info  = {+bun_patrol_start} sr_sound_act@monolith_call %=run_cam_effector(prison_1:2506:false)%


[sr_sound_act@monolith_call]
