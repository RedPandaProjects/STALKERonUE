team = followers
def_state_moving = rush
def_state_campering = hide
radius = 3
no_retreat = true
meet = meet@def
on_signal = arrived | {-pri_wave1_start} %+pri_wave1_start%
on_info = {+pri_wave1_hide} camper@wave1_hide1

[camper@wave1_hide1]
path_walk = pri_wave1_followers_stalker1_hide_walk1
