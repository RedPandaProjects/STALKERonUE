;-------------------------------------------------------------------------------
; Гулаг монолита у выхода на Радар
;-------------------------------------------------------------------------------

;-------------------------------------------------------------------------------
; Common
;-------------------------------------------------------------------------------
[danger_condition@mil_monolith]
ignore_distance = 0

[c_ignore@mil_monolith]

;-------------------------------------------------------------------------------
; Soldier 1
;-------------------------------------------------------------------------------
[logic@mil_monolith_soldier1]
active = camper@mil_monolith_soldier1
combat_ignore = c_ignore@mil_monolith

[camper@mil_monolith_soldier1]
path_walk = walk1_1
path_look = look1
on_signal = arrive | walker3@mil_monolith_soldier1
combat_ignore_cond = {=dist_to_actor_ge(40)}
radius = 15
no_retreat = true

[walker3@mil_monolith_soldier1]
path_walk = walk1_2
path_look = look1
on_signal = arrive | kamp1@mil_monolith_soldier1

[kamp1@mil_monolith_soldier1]
center_point = kamp1


