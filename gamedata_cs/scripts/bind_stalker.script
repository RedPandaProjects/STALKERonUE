function actor_binder:net_destroy()
		xr_sound.stop_sounds_by_id(self.object:id())
		local board_factions = sim_board.get_sim_board().players
		for k,v in pairs (board_factions) do
			xr_sound.stop_sounds_by_id(v.id)
		end
