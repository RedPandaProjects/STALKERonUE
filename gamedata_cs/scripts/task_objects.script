			end
		end
	end
	local t = reader:r_s16()
	if t == 0 or t == -1 then
		self.effector_started_time = t
	else
		self.effector_started_time = time_global()+t
	end
	self.blowout_rumble_level = 0
	set_save_marker(reader, "load", true, "CHideFromSurgeTask")
end

