	--callstack()

	--' �������� �����������.
	self.squad_population_max = 0 --'������������ ���������� �������, ������� ����������� ����� �����.
	self.resource_level = 0		--' ������� �������������� �����������. ������ �� �������� ���������.
	self.glory_level = 0		--' ������� ����������� �����������. ������ �� ������ ������� ������.

	self.absolute_power = 0


	--' ��� ������� ������� ��� �������
